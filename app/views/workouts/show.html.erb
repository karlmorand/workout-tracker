<h2><%= @workout.title %></h2>
<p>
  <%= @workout.description %>
</p>

<table class="u-full-width">
  <thead>
    <tr>
      <th>Date</th>
      <th>Sets</th>
      <th>Reps</th>
      <th>Weight</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <% @workout.sessions.each do |session| %>
    <tr>
      <td>
      <%= link_to session.created_at.to_formatted_s(:short), session %>
    </td>
    <td>
      <%= session.sets %>
    </td>
    <td>
      <%= session.reps %>
    </td>
    <td>
      <%= session.weight %>
    </td>
    <td>
      <%= session.notes %>
    </td>
  </tr>

    <% end %>

  </tbody>
</table>
<div class="button">
  <%= link_to "New Session", new_session_path(:workout_id => @workout.id) %>
</div>
<div class="button">
  <%= link_to "Edit #{@workout.title}", edit_workout_path(@workout) %>

</div>
<div class="button">
  <%= link_to "Delete #{@workout.title}", workout_path(@workout), method: :delete, data:{confirm: 'Confirm you want to delete this workout'} %>

</div>
<div class="button">
  <%= link_to "Back to all lifts", workouts_path %><br />

</div>
